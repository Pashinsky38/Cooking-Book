<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Dynamic gradient background -->
    <View
        android:id="@+id/dynamicGradientBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/colorBackground" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="32dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/titleInput"
                    android:hint="@string/recipe_title_hint"
                    android:inputType="textCapSentences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/descInput"
                    android:hint="@string/description_hint"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="3"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/categoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="?android:attr/textColorPrimary" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/ingredientsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ingredients"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:textColor="?android:attr/textColorPrimary" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ingredientInput"
                    android:hint="@string/ingredient_hint"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addIngredientBtn"
                android:text="@string/add_ingredient"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:id="@+id/ingredientsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/dietaryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dietary_restrictions"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:textColor="?android:attr/textColorPrimary" />

            <CheckBox
                android:id="@+id/vegetarianCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vegetarian"
                android:layout_marginBottom="8dp"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/veganCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vegan"
                android:layout_marginBottom="8dp"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/glutenFreeCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gluten_free"
                android:layout_marginBottom="8dp"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/meatCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/meat"
                android:layout_marginBottom="20dp"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/recipeImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                android:contentDescription="@string/recipe_image_description"
                android:background="?attr/colorControlHighlight"
                android:layout_marginBottom="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chooseImageBtn"
                android:text="@string/choose_image"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveBtn"
                android:text="@string/save"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteBtn"
                android:text="@string/delete_recipe"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="?attr/colorError"
                android:strokeColor="?attr/colorError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>